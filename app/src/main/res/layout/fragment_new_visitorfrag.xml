<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1129"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Visitor"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <!-- Visitor Name -->
        <EditText
            android:id="@+id/visitorName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Visitor Name"
            android:textAlignment="center"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A5A2A2"
            android:backgroundTint="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Number of Visitors -->
        <EditText
            android:id="@+id/numberOfVisitors"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Number of Visitors"
            android:textAlignment="center"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#A5A2A2"
            android:backgroundTint="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Reason for Visit -->
        <EditText
            android:id="@+id/reasonForVisit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Reason for Visit"
            android:textAlignment="center"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A5A2A2"
            android:backgroundTint="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Student or Admin Option -->
        <RadioGroup
            android:id="@+id/visitorTypeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF" />

            <RadioButton
                android:id="@+id/radioFaculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculty"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:layout_marginStart="20dp" />
        </RadioGroup>

        <!-- ID Number -->
        <AutoCompleteTextView
            android:id="@+id/idNumber"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="ID Number / Name"
            android:textAlignment="center"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A5A2A2"
            android:backgroundTint="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitVisitorButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Notify"
            android:textSize="18sp"
            android:backgroundTint="#1E90FF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F10707"
            android:padding="12dp"
            android:text="Cancel"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
