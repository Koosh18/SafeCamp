<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1129"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus In/Out Form"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:gravity="center" />
        <!-- Purpose -->
        <EditText
            android:id="@+id/purpose"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Purpose"
            android:textAlignment="center"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A5A2A2"
            android:backgroundTint="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Out Date Picker -->
        <Button
            android:id="@+id/out_date_picker"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Select Out Date"
            android:textSize="16sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#0D1129"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Out Time Picker -->
        <Button
            android:id="@+id/out_time_picker"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Select Out Time"
            android:textSize="16sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#0D1129"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- In Date Picker -->
        <Button
            android:id="@+id/in_date_picker"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Select In Date"
            android:textSize="16sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#0D1129"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- In Time Picker -->
        <Button
            android:id="@+id/in_time_picker"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Select In Time"
            android:textSize="16sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#0D1129"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="18sp"
            android:backgroundTint="#1E90FF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F10707"
            android:padding="12dp"
            android:text="Cancel"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>