<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guardDashboard.GuardDashboard"
    android:background="#050A23">

    <!-- Dashboard Container (Welcome Message and Buttons) -->
    <LinearLayout
        android:id="@+id/dashboard_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Welcome Message Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#0B0A0A">
            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Koosh"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#7789EF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Button Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:background="#070D32">
            <Button
                android:id="@+id/button_new_visitor"
                android:text="Inform about new Visitor"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#03A9F4"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="15dp" />
            <Button
                android:id="@+id/button_pre_bookings"
                android:text="Check PreBookings"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#03A9F4"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="15dp" />
            <Button
                android:id="@+id/button_notified"
                android:text="Approval Notifications"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#03A9F4"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="15dp" />
            <Button
                android:id="@+id/button_campus_inout"
                android:text="Campus In-Out Register"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#03A9F4"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="15dp" />
            <Button
                android:id="@+id/logout"
                android:text="LogOut"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF5722"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="15dp" />
            <Button
                android:id="@+id/alert_all_gaurds"
                android:text="!!! Alert All Gaurds !!!"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF5722"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_marginBottom="15dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>